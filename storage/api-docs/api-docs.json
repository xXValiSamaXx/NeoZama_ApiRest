        "/api/documents/{id}/share": {
            "post": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Compartir un documento con otro usuario",
                "operationId": "d75d05e59ba0e7b350f1e3b78fcef966",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id"
                                ],
                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "permission": {
                                        "type": "string",
                                        "enum": [
                                            "view",
                                            "edit",
                                            "download"
                                        ],
                                        "example": "view"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Documento compartido"
                    },
                    "403": {
                        "description": "No autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
