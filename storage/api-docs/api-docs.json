        "/api/documents": {
            "get": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Listar todos los documentos del usuario",
                "operationId": "0eeb1a024876b0279b451f715fb6ed7f",
                "parameters": [
                    {
                        "name": "category_id",
                        "in": "query",
                        "description": "Filtrar por categoría",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Buscar por título",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de documentos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Document"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Subir un nuevo documento",
                "operationId": "c9fef7703e9cd343c6c74a1a2fcf023e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "title",
                                    "file"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Contrato 2024"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Contrato de servicios"
                                    },
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "category_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "is_public": {
                                        "type": "boolean",
                                        "example": false
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Documento subido exitosamente"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
